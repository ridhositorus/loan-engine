      "item": [
        {
          "name": "1. Create Loan",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = JSON.parse(responseBody);",
                  "pm.collectionVariables.set(\"loan_id\", jsonData.loan_id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"borrower_id\": 1,\n    \"principal_amount\": 10000000.00,\n    \"rate\": 15.0,\n    \"roi\": 12.5\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/loans",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "loans"
              ]
            },
            "description": "Creates a new loan in the 'proposed' state. The `loan_id` from the response is automatically saved as a collection variable to be used in subsequent requests."
          },
          "response": []
        },
        {
          "name": "2. Approve Loan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
